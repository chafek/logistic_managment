{% extends 'template.html.twig' %}

{% block title %}<title>Gestion des Chariots</title>{% endblock %}
{% block pageTitle %}
   
    <h2 class=' text-center m-3 text-success'>cart #{{cart.id}}</h2>
     <div class="text-end">
     <a type="btn" href="{{path("show_cart")}}" class="btn btn-outline-primary" >Retour à la liste</a>  
     </div>
{% endblock %}

{% block body %}

  
  <div class="card w-75 m-auto text-center bg-success" style="width:22rem;">
  {# <img src="..." class="card-img-top" alt="..."> #}
  <h4 class="text-black ">Détail du chariot</h4>
  <div class="card-body">
    <ul class="list-group list-group-flush">
    <li class="list-group-item ">Id: <strong>{{cart.id}}</strong></li>
    <li class="list-group-item ">Numéro interne: <strong>{{cart.getInternalNumber()}}</strong></li>
    <li class="list-group-item ">Marque: <strong>{{cart.getMark()}}</strong></li>
    <li class="list-group-item ">N° de série: <strong>{{cart.getSerialNumber()}}</strong></li>
    <li class="list-group-item ">Type: <strong>{{cart.getType()}}</strong></li>
    <li class="list-group-item ">Début location: <strong>{{cart.getRentDateStart()|date('d/m/Y')}}</strong></li>
    <li class="list-group-item ">Fin location: <strong>{{cart.getRentDateEnd()|date('d/m/Y')}}</strong></li>
    <li class="list-group-item ">Etat: <strong>{{cart.state.designation}}</strong></li>
    <li class="list-group-item ">Service: <strong>{{cart.getService}}</strong></li>
     <li class="list-group-item">
      {% if  cart.getMembers is empty %}
        Chariot non attribué!
      {% else %}
        utilisateurs:<br>
        {% for member in cart.getMembers %}
            <strong><a href="{{path('detail_member',{id:member.id})}}">{{member.firstName}} {{member.lastName}}</a></strong>,  
        {% endfor %}
      {% endif %}
    </li>

     <li class="list-group-item ">
        Crée le: {{cart.getCreatedAt()|date('d/m/Y à H:i')}}
      </li>
      <li class="list-group-item ">
        Modifié le: {{cart.getUpdateAt()|date('d/m/Y à H:i')}}
      </li>
    {# <li class="list-group-item ">Utilisateurs: <ol>{% for member in cart.members %}<strong>{{member.getFirstname}}</strong><br>{% endfor %}</ol></li> #}
   
 
      {# <li class="list-group-item ">
        Crée le: {{cart.getCreatedAt()|date('d/m/Y')}}
      </li> #}
  </ul>
  </div>
</div>


   
{% endblock %}