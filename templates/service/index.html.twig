    <div class="card mb-4 mt-5 ">
         <div class="card-header d-flex justify-content-between" >
            <span '><i class="fas fa-table me-1"></i>liste des services</span>
            <a type="btn" href="{{path('add_service')}}" class="btn btn-primary  {% if( not app.user) %} disabled{% endif %}" >Ajouter</a>  
                            </div>
                            <div class="card-body">
                                <table id="datatablesSimple " class="table table-striped">
