                                            <th>Id</th>
                                            <th>Login</th>
                                            
                                        </tr>
                                    </tfoot> #}
                                    <tbody>
                                        
                                    
                                    {% for service in services %}
                                        <tr>
                                        <th>{{service.id}}</th>   
                                        <td><a href="{{path("detail_service",{id:service.id})}}">{{service.service}}</a></td>
                                        <td><a class="btn btn-danger btn-sm m-3  {% if( not app.user) %} disabled{% endif %}" href="service/delete/{{service.id}}" role="button">Supprimer</a></td>
                                        <td><a class="btn btn-warning btn-sm m-3  {% if( not app.user) %} disabled{% endif %}" href="service/update/{{service.id}}" role="button">Modifier</a></td>
                                        </tr>
                                    {% endfor %}   
                                     
                                      
                                      
                                   
                         
                                    </tbody>
                                </table>
                            </div>
                        </div>
    
{% endblock %}